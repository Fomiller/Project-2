{{#each Recipe}}
  <div class='row'>
    <div class='col my-1'>
        <div class='card'>
            <div class='card-body'>
              <div class="row">
                <div class="col-md-6">
                  <h2>{{recipeName}}</h2>
                </div>
                <div class="col-md-6 text-right">
                  <a href="/user/{{User.id}}"><h2>{{User.username}}</h2></a>
                </div>
              </div>
                <h4>Description</h4>
                <p>{{description}}</p>
                <h4>Instructions</h4>
                <p>{{instructions}}</p>
                <h4>Ingredients</h4>
                <p>{{ingredients}}</p>
                <h4>Chef Comments</h4>
                <p>{{chefComments}}</p>
              <div class="card">
                <div class="card-body">
                <h4>Comments</h4>
                      {{#each Comments}}  
                  <div class="card mb-1">
                    <div class="card-body py-1">
                        <p class="my-1">{{commentBody}}</p>
                    </div>
                  </div>
                      {{/each}}

                </div>
              </div>
            </div>
        </div>
    </div>
</div>
{{/each}}