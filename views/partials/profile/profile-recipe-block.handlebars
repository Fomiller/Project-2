{{#each Recipe}}
<div class="card">
    <div class="card-header" id="headingOne">
        <h2 class="mb-0">
            <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapse{{id}}"
                aria-expanded="true" aria-controls="collapseOne">
                <h3 class='recipe-name'>{{recipeName}}</h3>
            </button>
        </h2>
    </div>

    <div id="collapse{{id}}" class="collapse " aria-labelledby="headingOne" data-parent="#accordionExample">
        <div class="card-body">
            <div class='user-recipe'>
                <div>
                    <h5>Description:</h5>
                    <p class="recipe-info">{{description}}</p>
                    <input id='desc-form{{id}}' class="recipe-input" type="text" data-edit={{id}} value="{{description}}" style="display: none;">
                </div>
                <div>
                    <h5>Instructions:</h5>
                    <p class="recipe-info">{{instructions}}</p>
                    <input id='inst-form{{id}}' class="recipe-input" type="text" data-edit={{id}} value="{{instructions}}" style="display: none;">
                </div>
                <div>
                    <h5>Ingredients:</h5>
                    <p class="recipe-info">{{ingredients}}</p>
                    <input id='ingred-form{{id}}' class="recipe-input" type="text" data-edit={{id}} value="{{ingredients}}" style="display: none;">
                </div>
                <div>
                    <h5>Chef Comments:</h5>
                    <p class="recipe-info">{{chefComments}}</p>
                    <input id='chef-form{{id}}' class="recipe-input" type="text" data-edit={{id}} value="{{chefComments}}" style="display: none;"> 
                </div>
                <p class="recipe-info">{{Rating}}</p>
                <p class="recipe-info">{{Category}}</p>
            </div>
            <div class="mt-3">
                <button class="btn btn-outline-danger del-btn btn-sm" data-id='{{id}}'>Delete</button>
                <button class="btn btn-outline-primary edit-btn btn-sm" data-id='{{id}}'>Edit</button>
                <button class="btn btn-outline-success save-btn btn-sm" type="submit" data-id='{{id}}' data-save='{{id}}'>Save</button>
            </div>
        </div>
    </div>
</div>
{{/each}}