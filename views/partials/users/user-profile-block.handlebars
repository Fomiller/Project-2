{{#each Recipe}}
<div class="card">
    <div class="card-header" id="headingOne">
        <h2 class="mb-0">
            <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne{{id}}"
                aria-expanded="true" aria-controls="collapseOne">
                <h3>{{this.recipeName}}</h3>
            </button>
        </h2>
    </div>

    <div id="collapseOne{{id}}" class="collapse show" aria-labelledby="headingOne" data-parent="#accordionExample">
        <div class="card-body">
            <div>
                <p>{{this.description}}</p>
                <p>{{this.instructions}}</p>
                <p>{{this.ingredients}}</p>
                <p>{{this.chefComments}}</p>
                <p>{{this.Rating}}</p>
                <p>{{this.Category}}</p>
            </div>
        </div>
    </div>
</div>
{{/each}}