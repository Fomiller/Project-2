{{#each User}}
        <div class='card'>
            <div class='card-body'>
                <div class="row">
                    <div class="col">
                        <h1 id='username'>{{username}}</h1>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <h4 id='first-name'>{{firstName}}</h4>
                    </div>
                    <div class="col-md-6">
                        <h4 id='last-name'>{{lastName}}</h4>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-10">
                    <p>Bio</p>
                     <textarea placeholder="{{bio}}" class='form-control' rows='10' id='bio'></textarea>
                     {{!-- hidden <p> to store the user id --}}
                    <p hidden id='user-id'>{{id}}</p>
                    </div>
                    <div class='col-md-2'>
                        <a href='/api/update-bio/{{id}}'><button class='btn-info' id='save-bio'>Save Bio</button></a>
                    </div>
                </div>
            </div>
        </div>
{{/each}}