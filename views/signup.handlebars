<div class='row h-100'>
  <div class='col my-auto'>
        <div class='row text-center my-3'>
          <div class='col'>
          <h2>The Cookbook Recipe App You Love</h2>
          </div>
        </div>
    <div class='row text-center'>
      <div class='col'>
        <div class='card'>
            <div class='card-body'>
                <h5>Signup</h5>
                <form class='signup'>
                    <input class='py-1' type='text' id='email-input' placeholder='Email'>
                    <input class='ml-3 py-1' type='text' id='password-input' placeholder='Password'>
                    <button class='btn btn-primary submit ml-3 px-3' type='submit'>Signup</button>
                </form>
            </div>
        </div>
      </div>
    </div>
    <div class='row my-3'>
      <div class='col'>
        <div class='card'>
          <div class='card-body'>
            <h2>Featured Recipes</h2>
            <ul>
              {{{Recipe}}}
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="./public/assets/js/signup.js"></script>