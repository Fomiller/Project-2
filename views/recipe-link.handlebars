<div class='row my-auto'>
    <div class='col-lg-12'>
        <h1>{{{Recipe Name}}}</h1>
    </div>
</div>
<div class='row my-3'>
    <div class='col'>
        <div class='card'>
            <div class='card-body'>
                <img>{{{Image}}}
                <div class='col ml-3'>
                    <p>{{{Description}}}</p>
                </div>
            </div>
        </div>
    </div>
</div>
<div class='row my-2'>
    <div class='col'>
        <div class='card'>
            <div class='card-body'>
                {{{Ingredients}}}
                {{{Instructions}}}
            </div>
        </div>
    </div>
</div>
<div class='row my-auto'>
    <div class='col'>
        <div class='card'>
            <div class='card-body'>
                {{{Chef Comments}}}
            </div>
        </div>
    </div>
</div>